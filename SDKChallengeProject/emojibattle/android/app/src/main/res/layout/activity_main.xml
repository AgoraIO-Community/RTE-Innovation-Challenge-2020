<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <EditText
        android:id="@+id/editChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_channel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextFields,AutoFill" />

    <Button
        android:id="@+id/btnBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_room"
        app:layout_constraintEnd_toEndOf="@id/editChannel"
        app:layout_constraintStart_toStartOf="@+id/editChannel"
        app:layout_constraintTop_toBottomOf="@+id/editChannel" />


</androidx.constraintlayout.widget.ConstraintLayout>