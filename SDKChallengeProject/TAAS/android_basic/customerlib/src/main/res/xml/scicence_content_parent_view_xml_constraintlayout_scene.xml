<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/content_container"
            android:alpha="0.4" />
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.4"
            motion:layout_constraintTop_toBottomOf="@id/title_view"
            motion:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.4" />
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:visibility="visible"
            android:alpha="0.4"
            motion:layout_constraintTop_toBottomOf="@id/title_view" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/warning_end">
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:visibility="visible"
            android:alpha="0.4"
            motion:layout_constraintTop_toBottomOf="@id/title_view" />
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.4" />
    </ConstraintSet>
    <Transition
        android:id="@+id/to_warning"
        motion:constraintSetStart="@+id/style_start"
        motion:constraintSetEnd="@+id/warning_end"
        motion:duration="2500">
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/content_container"
                motion:framePosition="25"
                android:alpha="0.8" />
            <KeyAttribute
                motion:motionTarget="@+id/content_container"
                motion:framePosition="50"
                android:alpha="0.6" />
            <KeyAttribute
                motion:motionTarget="@+id/content_container"
                motion:framePosition="75"
                android:alpha="0.8" />
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/style_start" >
        <Constraint
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            motion:layout_constraintTop_toBottomOf="@id/title_view"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0.4" />
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.4" />
    </ConstraintSet>
</MotionScene>