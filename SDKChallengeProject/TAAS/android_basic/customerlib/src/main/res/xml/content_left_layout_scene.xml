<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/one_img"
            android:alpha="0" />
        <Constraint
            android:id="@+id/one_tv"
            app:layout_constraintLeft_toRightOf="@+id/one_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rotationX="90"
            android:layout_marginTop="100dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp" />
        <Constraint
            android:id="@+id/two_img"
            android:alpha="0" />
        <Constraint
            android:id="@+id/two_tv"
            app:layout_constraintLeft_toRightOf="@+id/two_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/one_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:rotationX="90"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp" />
        <Constraint
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/left">
        <Constraint android:id="@id/one_img"
            app:layout_constraintBottom_toBottomOf="@+id/one_tv"
            app:layout_constraintTop_toTopOf="@+id/one_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <Constraint
            android:id="@+id/one_tv"
            app:layout_constraintLeft_toRightOf="@+id/one_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />
        <Constraint
            android:id="@+id/two_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/two_tv"
            app:layout_constraintTop_toTopOf="@+id/two_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/two_tv"
            app:layout_constraintLeft_toRightOf="@+id/two_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/one_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />
        <Constraint
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5" />
    </ConstraintSet>

    <Transition
        android:id="@+id/content_left_transition"
        app:constraintSetEnd="@id/left"
        app:constraintSetStart="@+id/start"
        app:duration="500"
        app:autoTransition="none"></Transition>
</MotionScene>
