<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

       <data>
        <variable
            name="mapUIVM"
            type="com.framing.module.customer.ui.viewmodel.MapUIVM" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/map_fragment_layout_scene">

        <com.framing.module.customer.ui.widget.map.CustomerMapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"></com.framing.module.customer.ui.widget.map.CustomerMapView>

        <FrameLayout
            android:id="@+id/left_layout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#0ff"
            app:layout_constraintEnd_toStartOf="parent">

            <com.framing.module.customer.ui.widget.element.LeftMenuView
                android:id="@+id/left_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f"></com.framing.module.customer.ui.widget.element.LeftMenuView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="#ff0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="505dp"></FrameLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
